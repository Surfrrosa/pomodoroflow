{
  "expo": {
    "name": "PomodoroFlow",
    "slug": "pomodoroflow",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "This app uses notifications to alert you when Pomodoro sessions end.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.surfrrosa.pomodoroflow"
    },
    "android": {
      "package": "com.surfrrosa.pomodoroflow",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7e0dc02e-4012-4d53-8765-06de09aed23e"
      }
    },
    "owner": "shainaep"
  }
}
